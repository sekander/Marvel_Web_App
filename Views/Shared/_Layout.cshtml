    <script src="~/js/lightbox2/lightbox.js"></script>
    <script>
        //rich text WYSIWYG editor
        //documentation: https://www.tiny.cloud/docs/quick-start/
        tinymce.init({
            selector: 'textarea.mce'
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
