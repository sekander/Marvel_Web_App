<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineStore.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/lightbox2/lightboxmin.css" asp-append-version="true" />
    <script src="https://cdn.tiny.cloud/1/KEY_GOES_HERE/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    @{
        ViewData["Title"] = "Dashboard";
        var role = User.IsInRole("Admin") ? "Admin" :
        User.IsInRole("Manager") ? "Manager" :
        "User";
    }
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header>
       <nav class="navbar">
    <div class="logo-container">
        <img src="~/logo.svg" alt="Logo" class="logo" />
    </div>

    <div class="navbar-links">
        <div class="navbar-link active">HOME</div>
        <div class="navbar-link">COMICS</div>
    </div>
